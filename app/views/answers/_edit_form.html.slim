= link_to 'Edit', '#', class: 'edit-answer-link btn btn-info', data: { answer_id: answer.id }

= form_with model: answer, class: "edit_answer_form js_form-#{answer.id} hidden" do |f|
  .edit_answer_errors
  = f.label :body, for: "answer_body_update-#{answer.id}"
  = f.text_area :body, id: "answer_body_update-#{answer.id}"
  = f.label :files, for: "answer_files_update-#{answer.id}"
  = f.file_field :files, multiple: true, id: "answer_files_update-#{answer.id}"
  .files
    - if answer.files.attached?
      table
        - answer.files.each do |file|
          tr[id="attachment-#{file.id}"]
            td.name = link_to file.filename.to_s, url_for(file), target: '_blank'
            td.delete = link_to 'Delete', destroy_attachment_answer_path(answer, file_id: file),
                    class: 'btn btn-warning',
                    role: 'button',
                    method: :delete,
                    remote: true

  = f.submit 'Save', class: 'btn btn-success'
