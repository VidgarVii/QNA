- if current_user.subscribed_to?(resource)
  span You are subscribed to notifications about this issue
  = link_to 'Unsubscribe', subscription_path(@subscription),
              role: 'button',
              method: :delete,
              remote: true,
              data: {confirm: 'Are you sure?'}
- else
  = link_to 'Subscribe to the update issue', subscriptions_path(question_id: resource.id),
          role: 'button',
          remote: true,
          method: :post

